                $$('#modalidade').setProperty('disabled', 'disabled');
                $$('[autosuggest=modalidade]').setProperty('disabled', 'disabled');
            };
            var enable_modalidade = function (id) {
                $$('#modalidade').set('value', id);
                $$('[autosuggest=modalidade]').set('value', id);
                $$('#modalidade').removeProperty('disabled');
                $$('[autosuggest=modalidade]').removeProperty('disabled');
            };
            list.datagrid.addEvent('loaddata', function () {
                disable_modalidade();
            });
            list.datagrid.addEvent('dblclick', function (event) {
                if (!this.getDataByRow(this.getSelectedIndices()).id_modalidade) {
                    disable_modalidade();
                } else {
                    enable_modalidade(this.getDataByRow(this.getSelectedIndices()).modalidade);
                }
            });
            $$('input.edit').addEvent('click', function () {
                if (!list.datagrid.getDataByRow(list.datagrid.getSelectedIndices()).id_modalidade) {
                    disable_modalidade();
                } else {
